pipeline {
    agent { label 'node1' }

    stages {
        stage('Version Control Checkout from GitHub') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/honeymodi55/terraform-end-to-end.git']])
            }
        }
        
        stage("Terraform Version") {
            steps {
                sh '''
                    set -e
                    terraform version
                '''
            }
        }
           
        stage("Terraform Initialization") {
            steps {
                sh '''
                    set -e
                    terraform init -upgrade
                '''
            }
        }
        
        stage("Terraform Plan") {
            steps {
                sh '''
                    set -e
                    terraform plan -no-color -out=tfplan
                '''
            }
        }
        
        stage("Asking for Approval") {
            steps {
                input message: "Proceed to APPLY this terraform plan to AWS...?", ok: "Apply"
            }
        }
        
        stage("Terraform Apply") {
            steps {
                sh '''
                    set -e
                    terraform apply -no-color -auto-approve tfplan
                '''
            }
        }
    }

    post {
        always {
            script {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh 'terraform version || true'
                }
            }
        }
        failure {
            echo "Pipeline failed. Check logs above"
        }
    }
}

